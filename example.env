# The port the auth server runs on
SERVER_PORT=80
# USE_HTTP="no"

# The URL to the postgres db
DATABASE_URL="postgresql://postgres:password@localhost:5432/db?schema=public"

# The base64-encoded JWT secrets (required for persistent authentication across backend restarts)
# It is recommended to use different values for each of these for additional security
JWT_ACCESS_SECRET="YOUR JWT SECRET HERE"
JWT_REFRESH_SECRET="YOUR JWT SECRET HERE"
JWT_DEVICE_CODE_SECRET="YOUR JWT SECRET HERE"

# Enable this to modify the pattern matching applied to usernames (Default: "^[A-Z0-9 ]+$")
# USERNAME_REGEX="^[A-Z0-9 ]+$"

# Password strength options
# PASSWORD_MIN_LEN=8 # (Default: 8)
# PASSWORD_MIN_LOWERCASE=1 # (Default: 1)
# PASSWORD_MIN_UPPERCASE=1 # (Default: 1)
# PASSWORD_MIN_NUMBERS=1 # (Default: 1)
# PASSWORD_MIN_SYMBOLS=0 # (Default: 0)

# Account verification
# DISABLE_VERIFICATION="no" # Enabling this will cause all accounts to be verified upon creation
EMAIL_HOST=""
EMAIL_USER=""
EMAIL_PASS=""
# EMAIL_SECURE="no"
# EMAIL_PORT=587
# EMAIL_NO_TLS="no"

# Email content settings
# EMAIL_SUBJECT="Account verification for {user}" # All instances of "{user}" will be replaced with the username
# EMAIL_HTML="Please click this link to verify your account:<br><a href='{url}'>Verify</a>" # All instances of "{user}" will be replaced with the username and all of "{url}" will be replaced with the verification URL
# EMAIL_VERIFY_URL="http://localhost:3000/auth/verify?code={code}" # All instances of "{code}" will be replaced with the verification code

# Use this to disable the Swagger docs (Requires restart)
# DISABLE_SWAGGER="yes"